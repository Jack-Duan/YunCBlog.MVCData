@model IEnumerable<YunCBlog.MVCData.Areas.Admin.Models.PubViewModels.PubModuleViewModel>

@{
    ViewBag.Title = "ModuleList";
    @*Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";*@
    Layout = null;
}
@Styles.Render("~/Admin/css")
@Scripts.Render("~/admin/layui")
@Scripts.Render("~/admin/js")

<div class="x-nav">
    <span class="layui-breadcrumb">
        @Html.Raw(ViewBag.menu)
    </span>
    <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right" onclick="location.reload()" title="刷新">
        <i class="layui-icon layui-icon-refresh" style="line-height:30px"></i>
    </a>
</div>
<div class="layui-fluid">
    <div class="layui-row layui-col-space15">
        <div class="layui-col-md12">
            <div class="layui-card">
                <!-- 查询框 -->
                <div class="layui-card-body ">
                    <form class="layui-form layui-col-space5">
                        <div class="layui-inline layui-show-xs-block">
                            <input class="layui-input" autocomplete="off" placeholder="开始日" name="start" id="start">
                        </div>
                        <div class="layui-inline layui-show-xs-block">
                            <input class="layui-input" autocomplete="off" placeholder="截止日" name="end" id="end">
                        </div>
                        <div class="layui-inline layui-show-xs-block">
                            <input type="text" name="username" placeholder="请输入用户名" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-inline layui-show-xs-block">
                            <button class="layui-btn" lay-submit="" lay-filter="sreach"><i class="layui-icon">&#xe615;</i></button>
                        </div>
                    </form>
                </div>
                <!-- 表头按钮 -->
                <div class="layui-card-header">
                    @Html.ActionLink("添加", "CreateModule", new { }, new { @class = "layui-btn" })
                </div>
                <!-- 列表界面 -->
                <div class="layui-table-body layui-table-box">
                    <table class="layui-table layui-form">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModuleId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModuleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Url)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Memo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModuleCode)
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModuleId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModuleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Url)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Memo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModuleCode)
                                    </td>
                                    <td class="td-manage">
                                        @Html.ActionLink("编辑", "EditModule", new { moduleId = item.ModuleId }, new { @class = "layui-btn" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="layui-card-body ">
                    <div class="page">
                        <div>
                            <a class="prev" href="">&lt;&lt;</a>
                            <a class="num" href="">1</a>
                            <span class="current">2</span>
                            <a class="num" href="">3</a>
                            <a class="num" href="">489</a>
                            <a class="next" href="">&gt;&gt;</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
