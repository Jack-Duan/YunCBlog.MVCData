@model IEnumerable<YunCBlog.MVCData.Areas.Admin.Models.ArticleViewModels.CommentViewModel>
@{
    Layout = null;
}

<div class="news_pl">
    <h2>文章评论</h2>
    @*@{Html.RenderAction("Comment");}*@
    <div class="commentAll">
        <!--评论区域 begin-->
        <div class="reviewArea clearfix">
            <textarea class="content comment-input" placeholder="请输入评论..."></textarea>
            <a href="javascript:void(0);" data-articleid="@ViewBag.ArticleId" class="plBtn">评论</a>
        </div>
